	<center><VBox fx:id = "introVBox" spacing="10" alignment="CENTER">
	
		<Label fx:id = "titleLabel" text = "Baccarat Game"/>
		<TextField fx:id = "ipAddressTF" promptText = "Enter IP Address" maxWidth = "100"/>
		<TextField fx:id = "portInputTF" promptText = "Enter Port Number" maxWidth = "100"/>
		<Button fx:id = "serverConnectButton" text = "Connect" onAction = "#connectMethod"/>
		
	</VBox></center>
	
    
	
</BorderPane>

